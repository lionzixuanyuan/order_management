<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header">
      <h3>订单信息列表</h3>
    </div>

    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>订单编号</th>
          <th>客户名称</th>
          <th>客户地址</th>
          <th>数量合计</th>
          <th>金额合计</th>
          <th>签收人</th>
          <th>业务员</th>
          <th>制单员</th>
          <th>订单状态</th>
          <th>操作</th> 
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.code %></td>
            <td><%= u.customer.name if u.customer %></td>
            <td><%= u.customer.address if u.customer %></td>
            <td><%= u.totle_amount %></td>
            <td><%= u.totle_sum %></td>
            <td><%= u.inceptor %></td>
            <td><%= u.saleman %></td>
            <td><%= u.creator.name if u.creator %></td>
            <td><%= u.state %></td>
            <td>
              <%= link_to "查看订单详情", order_path(u) %>|
              <%= link_to "更改订单信息", edit_order_path(u) %>
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
    <%= link_to 'New Order', new_order_path %>
  </div>
  <div class="col-md-1"></div>
</div>
