<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header">
      <h3>订单信息详情</h3>
    </div>

    <div class="jumbotron">
      <table class="table">
        <tr>
          <td>订单编号：</td>
          <td><%= @order.code %></td>
        </tr>

        <tr>
          <td>客户名称：</td>
          <td><%= @order.customer.name %></td>
        </tr>

        <tr>
          <td>客户地址：</td>
          <td><%= @order.customer.address %></td>
        </tr>

        <tr>
          <td>数量合计：</td>
          <td><%= @order.totle_amount %></td>
        </tr>

        <tr>
          <td>金额合计：</td>
          <td><%= @order.totle_sum %></td>
        </tr>

        <tr>
          <td>签收人：</td>
          <td><%= @order.inceptor %></td>
        </tr>

        <tr>
          <td>业务员：</td>
          <td><%= @order.saleman %></td>
        </tr>

        <tr>
          <td>制单员：</td>
          <td><%= @order.creator.name %></td>
        </tr>

        <tr>
          <td>订单状态：</td>
          <td><%= @order.state %></td>
        </tr>
      </table>
    </div>

  </div>
  <div class="col-md-1"></div>
</div>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
