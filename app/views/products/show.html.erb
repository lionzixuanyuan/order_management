<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header">
      <div class="row">
        <div class="col-md-6">
          <h3>产品信息详情</h3>
        </div>
        <div class="col-md-6" style='text-align: right;'>
          <%= link_to '新建产品', new_product_path, class: "btn btn-default", style: "margin-top: 20px;" %>
          <%= link_to '编辑产品', edit_product_path(@product), class: "btn btn-default", style: "margin-top: 20px;" %>
          <%= link_to '返回产品列表', products_path, class: "btn btn-default", style: "margin-top: 20px;" %>
        </div>
      </div>
    </div>

    <div class="jumbotron">
      <table class="table">
        <tr>
          <td>产品名称及规格：</td>
          <td><%= @product.name %></td>
        </tr>

        <tr>
          <td>产品单位：</td>
          <td><%= @product.unit %></td>
        </tr>

        <tr>
          <td>产品单价：</td>
          <td><%= @product.price %></td>
        </tr>

        <tr>
          <td>产品状态：</td>
          <td><%= Product::STATE_HASH[@product.aasm_state.to_sym] %></td>
        </tr>
      </table>
    </div>

  </div>
  <div class="col-md-1"></div>
</div>
