<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header">
      <div class="row">
        <div class="col-md-6">
          <h3>客户信息列表</h3>
        </div>
        <div class="col-md-6" style='text-align: right;'>
          <%= link_to '新建客户', new_customer_path, class: "btn btn-default", style: "margin-top: 20px;" %>
        </div>
      </div>
    </div>

    <%= search_form_for @q, class: "form-inline", html: {style: "margin-bottom: 10px;"} do |f| %>
      <div class="form-group">
        <label class="sr-only" for="q_name_cont"></label>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "客户名称" %>
      </div>

      <div class="form-group">
        <label class="sr-only" for="q_address_cont"></label>
        <%= f.search_field :address_cont, class: "form-control", placeholder: "客户地址" %>
      </div>

      <div class="form-group">
        <label class="sr-only" for="q_phone_cont"></label>
        <%= f.search_field :phone_cont, class: "form-control", placeholder: "客户电话" %>
      </div>

      <div class="form-group">
        <label class="sr-only" for="q_consignee_cont"></label>
        <%= f.search_field :consignee_cont, class: "form-control", placeholder: "收件人" %>
      </div>

      <button type="submit" class="btn btn-primary">查询</button>
      <button type="submit" id="search_reset" class="btn btn-warning">重置</button>
    <% end %>

    <table class="table table-condensed table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>客户名称</th>
          <th>客户地址</th>
          <th>联系电话</th>
          <th>收件人</th>
          <th>操作</th> 
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.name %></td>
            <td><%= u.address %></td>
            <td><%= u.phone %></td>
            <td><%= u.consignee %></td>
            <td>
              <%= link_to "客户详情", customer_path(u), class: "btn btn-default" %>
              <%= link_to "编辑客户", edit_customer_path(u), class: "btn btn-default" %>
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
  </div>
  <div class="col-md-1"></div>
</div>

<script type="text/javascript">
  // controller & action
  var current_controller = "<%= params[:controller] %>";
  var current_action = "<%= params[:action] %>";
</script>
