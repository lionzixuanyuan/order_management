<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header">
      <h3>客户信息列表</h3>
    </div>

    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>客户名称</th>
          <th>客户地址</th>
          <th>操作</th> 
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.name %></td>
            <td><%= u.address %></td>
            <td>
              <%= link_to "查看客户详情", customer_path(u) %>|
              <%= link_to "更改客户信息", edit_customer_path(u) %>
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
    <%= link_to 'New Customer', new_customer_path, class: "button" %>
  </div>
  <div class="col-md-1"></div>
</div>

