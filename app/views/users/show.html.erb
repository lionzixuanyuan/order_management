<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="page-header">
      <h3><%= @user.name %>的用户信息</h3>
    </div>

    <div class="jumbotron">
      <table class="table">
        <tr>
          <td>用户名：</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>邮箱：</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>用户角色：</td>
          <td><%= @user.roles.join("、") %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
