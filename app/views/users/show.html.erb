<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="page-header">
      <div class="row">
        <div class="col-md-6">
          <h3><%= @user.name %>的用户信息</h3>
        </div>
        <div class="col-md-6" style='text-align: right;'>
          <%= link_to '编辑用户', edit_user_path(@user), class: "btn btn-default", style: "margin-top: 20px;" %>
          <%= link_to '返回用户列表', users_path, class: "btn btn-default", style: "margin-top: 20px;" %>
        </div>
      </div>
    </div>

    <div class="jumbotron">
      <table class="table">
        <tr>
          <td>用户名：</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>邮箱：</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>用户角色：</td>
          <td><%= @user.roles.join("、") %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
