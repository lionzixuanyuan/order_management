<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="page-header">
      <h3><%= @user.name %>的用户信息</h3>
    </div>

    <div class="jumbotron">
      <table class="table">
        <tr>
          <td>用户名：</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>邮箱：</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>用户角色：</td>
          <td><%= @user.roles.join("、") %></td>
        </tr>
      </table>
    </div>

    <% if (current_user == @user) || (current_user.is? "系统管理员") %>
      <div class="page-header">
        <h3>需要修改密码？</h3>
      </div>
      <div class="jumbotron">
        <%= form_for :user, url: '/users', html: {class: "form-horizontal"} do |f| %>
          <div class="form-group">
            <label for="user_password" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label for="user_password_confirmation" class="col-sm-2 control-label">确认密码</label>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">提交</button>
            </div>
          </div>

        <% end %>
      </div>
    <% end %>

  </div>
  <div class="col-md-3"></div>
</div>
